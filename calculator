import java.util.Scanner;
public class Scientific_Calculator {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String operator;
		Scanner in = new Scanner(System.in);
		System.out.print("Type the operator (+,-,*,/,cos,sin): ");
		operator = in.nextLine();
		
		switch(operator){
			case "+":
				System.out.print("Type the first number: ");
				int input1 = in.nextInt();
				System.out.print("Type the second number: ");
				int input2 = in.nextInt();
				System.out.print(input1+input2);
				break;
		case "-":
				System.out.print("Type the first number: ");
				int input3 = in.nextInt();
				System.out.print("Type the second number: ");
				int input4 = in.nextInt();
				System.out.print(input3-input4);
				break;
			case "*":
				System.out.print("Type the first number: ");
				int input5 = in.nextInt();
				System.out.print("Type the second number: ");
				int input6 = in.nextInt();
				System.out.print(input5*input6);
				break;
			case "/":
				System.out.print("Type the first number: ");
				double input7 = in.nextInt();
				System.out.print("Type the second number: ");
				double input8 = in.nextInt();
				System.out.print(input7/input8);
				break;
			case "-":
				System.out.print("Type the first number: ");
				int input3 = in.nextInt();
				System.out.print("Type the second number: ");
				int input4 = in.nextInt();
				System.out.print(input3-input4);
				break;
			case "*":
				System.out.print("Type the first number: ");
				int input5 = in.nextInt();
				System.out.print("Type the second number: ");
				int input6 = in.nextInt();
				System.out.print(input5*input6);
				break;
			case "/":
				System.out.print("Type the first number: ");
				double input7 = in.nextInt();
				System.out.print("Type the second number: ");
				double input8 = in.nextInt();
				System.out.print(input7/input8);
				break;
			case "cos":
				System.out.print("Type the first number: ");
				double input9 = in.nextInt();
				System.out.print(input9*(PI/180));
				break;
			
			case "sin":
			case "tan":
			case "root":
			case "ln":
			case "log":
			case "pie":
			case "!":
			case "^":
			
			default:
				System.out.print("Invalid input");
                                break;
		}
		
	}

}
			
